{
  "name": "bg-remover-pro",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "29.4.0"
  },
  "devDependencies": {
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.example.bgremoverpro",
    "productName": "BG Remover Pro",
    "files": [
      "main.js"
    ],
    "extraResources": [
      { "from": "../static", "to": "static" }
    ],
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Graphics",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}